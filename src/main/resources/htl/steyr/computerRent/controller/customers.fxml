   <children>
      <ListView fx:id="customerView" layoutX="36.0" layoutY="26.0" onMouseClicked="#customerViewClicked" prefHeight="329.0" prefWidth="200.0" />
      <TextField fx:id="firstnameField" layoutX="277.0" layoutY="27.0" promptText="*firstname*" />
      <TextField fx:id="lastnameField" layoutX="467.0" layoutY="27.0" promptText="*lastname*" />
      <TextField fx:id="zipcodeField" layoutX="277.0" layoutY="77.0" promptText="zipcode" />
      <TextField fx:id="villageField" layoutX="467.0" layoutY="77.0" promptText="village" />
      <TextField fx:id="streetField" layoutX="277.0" layoutY="135.0" promptText="street" />
      <TextField fx:id="streetnumberField" layoutX="467.0" layoutY="135.0" promptText="streetnumber" />
      <TextField fx:id="emailField" layoutX="277.0" layoutY="188.0" promptText="email" />
      <ButtonBar layoutX="294.0" layoutY="259.0" prefHeight="40.0" prefWidth="200.0">
         <buttons>
