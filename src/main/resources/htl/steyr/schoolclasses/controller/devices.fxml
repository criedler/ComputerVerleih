<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htl.steyr.schoolclasses.controller.DeviceController">
   <children>
      <ListView fx:id="deviceView" layoutX="26.0" layoutY="21.0" onMouseClicked="#deviceViewClicked" prefHeight="361.0" prefWidth="200.0" />
      <TextField fx:id="modelnameField" layoutX="240.0" layoutY="54.0" promptText="Modelname" />
      <TextField fx:id="priceField" layoutX="240.0" layoutY="111.0" promptText="Price" />
      <ChoiceBox fx:id="brandChoiceBox" layoutX="240.0" layoutY="188.0" prefWidth="150.0" />
      <ButtonBar layoutX="239.0" layoutY="234.0" prefHeight="40.0" prefWidth="200.0">
         <buttons>
            <Button mnemonicParsing="false" onAction="#saveClicked" text="Save" />
            <Button mnemonicParsing="false" onAction="#createClicked" text="Create" />
            <Button mnemonicParsing="false" onAction="#deleteClicked" text="Delete" />
         </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
